@model Post;

@{
    ViewData["Title"] = "Page";
    var now = DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss");
}
<div>
    @if (ViewData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible" role="alert">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            @ViewData["Message"]
        </div>
    }
    else if (ViewData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible" role="alert">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            @ViewData["Error"]
        </div>
    }

</div>


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add Post</h2>
            <hr />
        </div>
        <input asp-for="CreatedAt" type="hidden" value=@now />

        <div class="mb-3 row p-1">
            <label asp-for="Title" class="p-0"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Content" class="p-0"></label>
            <input asp-for="Content" class="form-control" />
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Slug" class="p-0"></label>
            <input asp-for="Slug" class="form-control" />
            <span asp-validation-for="Slug" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Add Post</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary border  form-control">
                    Back Home
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}