@model List<Post>;

@{
    ViewData["Title"] = "Posts for " + "" + " Category";
}



<div class="container mt-5">
    <div class="row">

        @if (Model == null)
        {
            ViewData["Title"] = "Not Found";

            <div class="text-center">
                <h1 class="display-4">Not found</h1>
            </div>
        }

        else
        {
            ViewData["Title"] = "Posts for " + "" + " Category";

            if (Model.Count < 1)
            {
                <div class="text-center">
                    <h1 class="display-4">No posts for this category</h1>
                </div>
            }
            else
            {
                <div class="text-center">
                    <h1 class="display-4">Posts for category</h1>
                </div>
            }
            @foreach (var post in Model)
            {

                <div class="col-md-4">
                    <div class="card post-preview">
                        <a asp-controller="Posts" asp-action="Index" asp-route-id="@post.Slug">
                            <img src="https://placehold.co/600x400" class="card-img-top img-fluid" alt="Post Image 1">
                        </a>
                        <div class="card-body">
                            <span class="badge badge-primary"></span>

                            <a asp-controller="Posts" asp-action="Index" asp-route-id="@post.Slug">
                                <h5 class="card-title mt-2">@post.Title</h5>
                            </a>
                            <p class="card-text">@Html.Raw(post.Content)
                                <a asp-controller="Posts" asp-action="Index" asp-route-id="@post.Slug">[...]</a>
                            </p>
                        </div>
                    </div>
                </div>
            }   }

    </div>
</div>