@model Category;

@if (Model != null)
{
    ViewData["Title"] = "Edit Category: " + @Model.CategoryName;

    <div>
        @if (ViewData["Message"] != null)
        {
            <div class="alert alert-success alert-dismissible" role="alert">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                @ViewData["Message"]
            </div>
        }
        else if (ViewData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible" role="alert">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                @ViewData["Error"]
            </div>
        }

    </div>


    <form method="post">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Edit Category</h2>
                <hr />
            </div>

            <input asp-for="CategoryId" type="hidden" value=@Model.CategoryId />

            <div class="mb-3 row p-1">
                <label asp-for="CategoryName" class="p-0"></label>
                <input asp-for="CategoryName" class="form-control" value=@Model.CategoryName />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Update Category</button>
                </div>

            </div>
        </div>
    </form>
    <form method="post">
        <div class="row">
            <div class="col-6 col-md-3">
                <input type="hidden" value="delete" />
                <button type="submit" class="btn btn-danger form-control">Delete Category</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary border  form-control">
                    Back Home
                </a>
            </div>
        </div>
    </form>

}
else
{
    ViewData["Title"] = "Not Found";

    <div class="text-center">
        <h1 class="display-4">Not Found</h1>
    </div>
}

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
        <script defer>
            document.addEventListener("DOMContentLoaded", async () => {
                await tinymce.init({
                    selector: '#default-editor'
                });
            })
        </script>
    }
}